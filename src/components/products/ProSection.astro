---
import MainHeadingDes from "@components/ui/MainHeading_des.astro";
import { CardDate } from "@data/data";
import type { CardType } from "../../types/types";
import Card from "@components/Card/Card.astro";
---

<section class="products">
  <MainHeadingDes
    sub="منتجاتنا"
    isSub={true}
    title="أسطول الإيجار لدينا"
    position="items-center"
  />
  <div class="container">
    <div class="row gap-row-1">
      {
        CardDate.slice(0, 6).map((card: CardType) => (
          <div class="col-4-lg col-6-md col-12-sm">
            <Card
              title={card.title}
              src={card.img}
              des={card.des}
              price={card.price}
              color={card.color}
              model={card.model}
              isStatus={card.available}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
